<Window x:Class="SOM_Kohonen_WpfApp.Views.TextMappingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:SOM_Kohonen_WpfApp.Views"
        Title="Text Parameter Mappings" Height="500" Width="600" Background="WhiteSmoke" WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <local:ParameterToPastelBrushConverter x:Key="ParameterToPastelBrushConverter"/>
    </Window.Resources>
    <Grid>
        <DataGrid x:Name="MappingsDataGrid"
                  Margin="10"
                  AutoGenerateColumns="False"
                  HeadersVisibility="Column"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  IsReadOnly="True"
                  Background="WhiteSmoke"
                  ScrollViewer.VerticalScrollBarVisibility="Visible">
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="Background" Value="{Binding Parameter, Converter={StaticResource ParameterToPastelBrushConverter}}"/>
                </Style>
            </DataGrid.RowStyle>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Parameter" Binding="{Binding Parameter}" Width="2*" />
                <DataGridTextColumn Header="Original Text" Binding="{Binding OriginalText}" Width="3*" />
                <DataGridTextColumn Header="Numeric Value" Binding="{Binding NumericValue}" Width="2*" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
