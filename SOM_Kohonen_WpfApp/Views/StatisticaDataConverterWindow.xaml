<Window x:Class="SOM_Kohonen_WpfApp.Views.StatisticaDataConverterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:SOM_Kohonen_WpfApp.Views"
        xmlns:models="clr-namespace:SOM_Kohonen_WpfApp.Models.Settings"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Statistica Data Converter Wizard"
        Height="500"
        Width="600"
        Background="WhiteSmoke"
        WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <ObjectDataProvider x:Key="DataFromEnum" MethodName="GetValues"
                            ObjectType="{x:Type system:Enum}">

            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="models:InputOption"/>
            </ObjectDataProvider.MethodParameters>

        </ObjectDataProvider>
    </Window.Resources>

    <Grid>

        <Grid x:Name="ImportSettingsGrid"
              Margin="10"
              Visibility="Visible">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                       Margin="0,0,0,10"
                       FontWeight="Bold"
                       TextWrapping="Wrap">
                This wizard allows importing exported data from STATISTICA, obtained from a Kohonen map, and visualizing them on Kohonen maps within this application.
            </TextBlock>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        Margin="0,0,10,10"
                        Padding="5"
                        ToolTip="Select json file with input data"
                        Click="ImportSettingsSelectData_Click">
                    _Select data
                </Button>

                <Label x:Name="InputFileNameLabel"
                       Grid.Column="1">

                </Label>

            </Grid>

            <DataGrid Grid.Row="2"
                      x:Name="DataColumnsDataGrid"
                      SelectionUnit="FullRow" 
                      SelectionMode="Single"
                      Margin="0,0,0,10">

                <DataGrid.CellStyle>
                    <Style TargetType="{x:Type DataGridCell}"
                           BasedOn="{StaticResource BaseDataGridCell}"/>
                </DataGrid.CellStyle>

                <DataGrid.Columns>

                    <DataGridTextColumn Header="Column"
                                        Binding="{Binding Column}"/>

                    <DataGridComboBoxColumn Header="Option"
                                            ItemsSource="{Binding Source={StaticResource DataFromEnum}}"
                                            SelectedItemBinding="{Binding InputOption}"/>

                </DataGrid.Columns>

            </DataGrid>

            <Grid Grid.Row="3"
                  HorizontalAlignment="Right">

                <Button Padding="15,5"
                        Click="Result_Click">
                    _Convert and Close
                </Button>

            </Grid>

        </Grid>
        
    </Grid>
</Window>
